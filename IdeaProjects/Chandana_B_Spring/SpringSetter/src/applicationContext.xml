<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">

    <bean id = "address1" class = "com.robosoftin.Address">
        <property name="addressLine1" value="7,Sullia"></property>
        <property name="city" value="Sullia"></property>
        <property name="state" value="Karnataka"></property>
        <property name="country" value="India"></property>
    </bean>
    <bean id="obj" class = "com.robosoftin.Employee">
        <property name="id" value = "1"></property>
        <property name="name" value = "Chandana B"></property>
        <property name="address" ref= "address1"></property>
    </bean>
</beans>